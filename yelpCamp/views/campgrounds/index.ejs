<% include ../partials/header.ejs %>
<div class="container">
<header class="jumbotron">
    <div class="container">
    <h1>Welcome to YelpCamp!</h1>
<p>View our Campgrounds</p>
<p>
<a class="btn btn-primary btn-lg" href="/campgrounds/new">Add new campground</a>
</p>
</div>
</header>

<div class="row text-center" style="display:flex;flex-wrap:wrap;">
<% for(var i=0;i<campgrounds.length;i++){ %>
   <div class="col-md-3 col-sm-6"><h4><div class="caption"><%= campgrounds[i].name %></div></h4>
   <img class="img-thumbnail" src="<%= campgrounds[i].image %>"></div>
    <p>
        <a href="/campgrounds/<%= campgrounds[i]._id %>" class="btn btn-primary">More Info</a>
    </p>
    <% } %>
   
    </div>
   
    </div>
    <% include ../partials/footer.ejs %>